<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beosztasapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeosztasApp"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activities.SzabiActivity"
            android:exported="false"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activities.ErtesitesActivity"
            android:exported="false"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activities.ErtesitesRecyclerActivity"
            android:exported="false"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activities.ErtesitesFActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activities.HomeAlkActivity"
            android:exported="false"
            android:label="@string/title_activity_home_alk"
            android:theme="@style/Theme.BeosztasApp.NoActionBar" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.BeosztasApp.NoActionBar" />
        <activity
            android:name=".activities.CalendarActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar" />
        <activity
            android:name=".activities.EditActivity"
            android:exported="false"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activites.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar" />
        <activity
            android:name=".activites.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar" />
        <activity
            android:name=".activities.UsersListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar"/>
        <activity
            android:name=".activites.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BeosztasApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>